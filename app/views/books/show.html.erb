<p style="color: green"><%= notice %></p>


<table border="1">
  <thead>
    <tr>
    <th>タイトル</th>
    <th>タグ</th>
    <th>要約</th>
    <th>著者</th>
    <th>出版日</th>
    <th>💰料金</th>
    <th>在庫</th>

    </tr>
  </thead>

  <tbody>

        <td><%= @book.title %></td>   
        <td><%= @book.tags.map(&:name).join(', ') %></td>
        <td><%= @book.summary %>
        <td><%= @book.author %></td>
        <td><%= @book.published_on %></td>
        <td><%= @book.price %></td>
        <td><%= @book.status %></td>
  </tbody>
</table>






<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }
  table, th, td {
    border: 1px solid #ddd;
  }
  th, td {
    padding: 10px;
    text-align: center;
  }
  th {
    background-color: #f2f2f2;
  }
</style>



<p>
   <strong>イメージ画像:</strong>
   <% if @book.photo.attached? %>
   <%= image_tag @book.thumbnail %>
   <% end %>
</p>



<div>
  <%= link_to "本を編集する", edit_book_path(@book) %> |
  <%= link_to "一覧画面に戻る", books_path %>

  <%= button_to "書籍を削除する", @book, method: :delete %>
</div>


