
<% if user_signed_in? %>

<p><%= link_to current_user.email, mypage_path %>さんようこそ</p>
<% end %>



<h1>書籍商品一覧📖🛒</h1>


<table border="1">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>タグ</th>
      <th>著者</th>
      <th>あらすじ</th>
      <th>出版日</th>
      <th>💰料金</th>
      <th>詳細</th>
      <th>在庫</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.tags.map(&:name).join(', ') %></td>
        <td><%= book.author %></td>
        <td><%= book.summary %></td>
        <td><%= book.published_on %></td>
        <td><%= book.price %></td>
       <td><%= link_to '確認', product_path(book) %></td>
       <% if book.status == 'soldout' %>
       <td class="soldout">売り切れ</td>
     <% else %>
       <td><%= book.status == 'sale' ? '販売中' : book.status %></td>
     <% end %>
     </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to '買い物かごを見る', cart_path(session[:cart_id]) %>


<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }
  table, th, td {
    border: 1px solid #ddd;
  }
  th, td {
    padding: 10px;
    text-align: center;
  }
  th {
    background-color: #f2f2f2;
  }
  .soldout {
    color: red;
    font-weight: bold; /* オプション: フォントを太くする */
  }
</style>
