
<% if user_signed_in? %>

<p><%= link_to current_user.email, mypage_path %>さんようこそ</p>
<% end %>



<h1>商品一覧</h1>


<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Summary</th>
      <th>Published On</th>
      <th>showing</th>
      <th>Price</th>
      <th>詳細</th>
      <th>在庫</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.summary %></td>
        <td><%= book.published_on %></td>
        <td><%= book.showing %></td>
        <td><%= book.price %></td>
       <td><%= link_to 'click', product_path(book) %></td>
       <% if book.status == 'soldout' %>
          <td class="soldout"><%= book.status %></td>
        <% else %>
          <td><%= book.status %></td>
        <% end %>
     </tr>
    <% end %>
  </tbody>

  <%= link_to '買い物かごを見る', cart_path(session[:cart_id]) %>


<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }
  table, th, td {
    border: 1px solid #ddd;
  }
  th, td {
    padding: 10px;
    text-align: center;
  }
  th {
    background-color: #f2f2f2;
  }
  .soldout {
    color: red;
    font-weight: bold; /* オプション: フォントを太くする */
  }
</style>
