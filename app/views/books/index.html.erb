<p style="color: green"><%= notice %></p>

<h1>書籍一覧📖</h1>


<table border="1">
  <thead>
    <tr>
      <th>イメージ画像</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>あらすじ</th>
      <th>出版日</th>
      <th>💰料金</th>
      <th>詳細</th>
      <th>在庫</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td class="image-cell">
      <% if book.photo.attached? %>
        <%= image_tag book.thumbnail %>
      <% end %>
    </td>

        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.summary %></td>
        <td><%= book.published_on %></td>
        <td><%= book.price %></td>
       <td><%= link_to '確認', book_path(book) %></td>
       <% if book.status == 'soldout' %>
          <td class="soldout">売り切れ</td>
        <% else %>
          <td><%= book.status == 'sale' ? '販売中' : book.status %></td>
        <% end %>
     </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to "書籍の新規登録を行う", new_book_path %>


<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }
  table, th, td {
    border: 1px solid #ddd;
  }
  th, td {
    padding: 10px;
    text-align: center;
  }
  th {
    background-color: #f2f2f2;
  }
  .soldout {
    color: red;
    font-weight: bold; /* オプション: フォントを太くする */
  }
</style>
